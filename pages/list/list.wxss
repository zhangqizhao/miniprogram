/* pages/list/list.wxss */
@import "../../lib/weui.wxss";

.swiper {
  width: 750rpx;
  height: 340rpx;
  margin: 20rpx 0;
}

.slide-image {
  width: 100%;
  height: 340rpx;
}

.section {
  padding: 24rpx 0;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.flex-wrp {
  width: 25%;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.flex-item {
  width: 72rpx;
  height: 72rpx;
}

.bank {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.img-content {
  width: 72rpx;
  height: 72rpx;
  position: relative;
}

.topTips {
  padding: 0 10rpx;
  min-width: 60rpx;
  line-height: 28rpx;
  background-color: rgba(252, 225, 10, 1);
  position: absolute;
  left: 20rpx;
  top: -16rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  white-space: nowrap;
  text-align: center;
}